
@model CalenderEventAsp.NetFrameworkProject.Entities.Event

@{
    ViewBag.Title = "Etkinliği Düzenle";
    Layout = "/Views/UILayout/Index.cshtml";

}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <h2>Etkinliği Düzenle</h2>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.EventId)

                <div class="form-group">
                    @Html.LabelFor(m => m.Title,"Etkinlik Başlığı")
                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Start,"Balangıç Tarihi")
                    @Html.TextBoxFor(m => m.Start, "{0:yyyy-MM-ddTHH:mm}", new { @class = "form-control", type = "datetime-local" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.End,"Bitiş Tarihi")
                    @Html.TextBoxFor(m => m.End, "{0:yyyy-MM-ddTHH:mm}", new { @class = "form-control", type = "datetime-local" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.AllDay,"Tüm gün mü?")
                    @Html.CheckBoxFor(m => m.AllDay)
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.BackgroundColor,"Renk")
                    @Html.TextBoxFor(m => m.BackgroundColor, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.BorderColor,"Kenarlık Rengi")
                    @Html.TextBoxFor(m => m.BorderColor, new { @class = "form-control" })
                </div>

                <button type="submit" class="btn btn-success">Güncelle</button>
                //Gidilecek Action method'un adıdır. Bu örnekte Index action'ına yönlendirme yapılır.
                //Linkin kullanıcıya görünen metnidir. Ekranda "İptal" yazar.
                //	Route values (yani parametreler) buraya verilir.
                @Html.ActionLink("İptal", "Index", null, new { @class = "btn btn-secondary" })
            }
            </div>
</section>
</div>