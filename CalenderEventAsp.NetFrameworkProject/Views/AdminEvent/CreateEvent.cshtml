@model CalenderEventAsp.NetFrameworkProject.Entities.Event
@{
    ViewBag.Title = "CreateEvent";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <h3>Yeni Etkinlik Oluştur</h3>
            <form method="post">
                <div class="form-group">
                    @Html.LabelFor(model => model.Title, "Etkinlik Adı")
                    @Html.TextBoxFor(model => model.Title)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Start, "Başlangıç Tarihi")
                    @Html.TextBoxFor(model => model.Start, new { type = "datetime-local" })
                </div>

                @Html.LabelFor(model => model.End, "Bitiş Tarihi")
                @Html.TextBoxFor(model => model.End, new { type = "datetime-local" })

                <div class="form-group">
                    @Html.LabelFor(model => model.AllDay, "Tüm gün mü?")
                    @Html.CheckBoxFor(model => model.AllDay)
                </div>

                <div class="form-group">

                    @Html.LabelFor(model => model.CategoryId, "Kategori")
                    @Html.DropDownListFor(model => model.CategoryId, (List<SelectListItem>)ViewBag.CategoryList, "Kategori Seçin", new { @class = "form-control", style = "width: 300px;" })
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                    @Html.ActionLink("İptal", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            </form>
        </div>
    </section>

</div>