@model CalenderEventAsp.NetFrameworkProject.Entities.Category
@{
    ViewBag.Title = "EditCategory";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <h2>kategoriyi Düzenle</h2>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.CategoryId)

                <div class="form-group">
                    @Html.LabelFor(m => m.CategoryName, "Kategori Adı")
                    @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Color, "Kategori Rengi")
                    @Html.DropDownListFor(model => model.Color, (SelectList)ViewBag.ColorList, "Renk Seçiniz", new { @class = "form-control", @id = "colorSelector" })
                </div>



                <button type="submit" class="btn btn-success">Güncelle</button>
                //Gidilecek Action method'un adıdır. Bu örnekte Index action'ına yönlendirme yapılır.
                //Linkin kullanıcıya görünen metnidir. Ekranda "İptal" yazar.
                //	Route values (yani parametreler) buraya verilir.
                @Html.ActionLink("İptal", "Index", null, new { @class = "btn btn-secondary" })
            }
        </div>
    </section>
</div>
