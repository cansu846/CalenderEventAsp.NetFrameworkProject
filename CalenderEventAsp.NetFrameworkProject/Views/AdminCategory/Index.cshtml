@model List<CalenderEventAsp.NetFrameworkProject.Entities.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <!-- Content Header (Page header) -->
        <div class="container-fluid">
            <table class="table table-bordered table-hover table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>#</th>
                        <th>Kategori Adı</th>
                        <th>Renk</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CategoryId</td>
                            <td>@item.CategoryName</td>
                            <td>
                                <span style="display: inline-block; width: 20px; height: 20px; background-color:@item.Color; border-radius: 3px;"></span>
                                <span class="ml-2">@item.Color</span>
                            </td>
                            <td>
                                @Html.ActionLink("Düzenle", "EditCategory", new { id = item.CategoryId }, new { @class = "btn btn-sm btn-warning" })
                                @Html.ActionLink("Sil", "DeleteCategory", new { id = item.CategoryId }, new { @class = "btn btn-sm btn-danger ml-1" })
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
            <a href="@Url.Action("CreateCategory", "AdminCategory")" class="btn btn-sm btn-primary">Kategori Ekle</a>

        </div>
        </section>
</div>